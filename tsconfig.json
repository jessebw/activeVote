{
  "compilerOptions": {
    // Set the target level of compiled code. es5 means it will run on older browsers.
    "target": "es2015",
    // Sets how the modules will be compiled
    "module": "esnext",
    // Search under node_modules for non-relative imports.
    "moduleResolution": "node",
    // Create source maps so that we can view our code in the uncompiled format within the browser
    "sourceMap": true,
    // Enable strictest settings like strictNullChecks & noImplicitAny.
    "strict": true,
    // Sets how to compile jsx code
    "jsx": "react",
    // Import non-ES modules as default imports.
    "esModuleInterop": true,
    // Where to find type definitions.
    "typeRoots": ["./node_modules/@types"]
  }
}
